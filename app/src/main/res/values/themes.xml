<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Avantrio_Assessment" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_pink</item>
        <item name="colorPrimaryVariant">@color/app_pink</item>
        <item name="colorOnPrimary">@color/app_pink</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_blue</item>
        <item name="colorSecondaryVariant">@color/app_blue</item>
        <item name="colorOnSecondary">@color/app_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>


    </style>

    <style name="PopupMenu" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">#5B5B5B</item>
        <item name="android:textSize">12sp</item>
        <!-- Change Overflow Menu ListView Item Height & Property -->
        <item name="android:listPreferredItemHeightSmall">30dp</item>
        <item name="android:layout_width">50dp</item>

    </style>

</resources>